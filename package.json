  "bugs": {
    "url": "https://github.com/mavoweb/madata/issues"
  },
  "homepage": "https://github.com/mavoweb/madata#readme",
  "devDependencies": {
    "postcss": "^8.3.9",
    "postcss-cli": "^9.0.1",
    "postcss-nesting": "^8.0.1"
  }
}
